{
  "route": {
    "/api/users": ["admin", "editor", "viewer"],
    "/api/posts": ["admin", "editor", "author"],
    "/api/admin/*": ["admin"],
    "*": ["viewer"]
  },
  "overrides": {
    "/health": true,
    "/metrics": true
  },
  "defaultRole": "viewer",
  "roleHierarchy": {
    "admin": ["editor", "author", "viewer"],
    "editor": ["author", "viewer"],
    "author": ["viewer"]
  }
}

